<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vishnu.livstock.Home"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:drawableTop="@drawable/ic_buyanimal"
            android:background="#ffa700"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
           android:text="Buy Animal" />
        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:drawableTop="@drawable/ic_sellanimal"
            android:background="#ffa700"
            android:text="Sell Animal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:drawableTop="@drawable/ic_tradeanimal"
            android:background="#ffa700"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:text="Donor" />
        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:drawableTop="@drawable/ic_tradeanimal2"
            android:background="#ffa700"
            android:text="Acceptor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="105dp">
        <Button
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/ic_ai"
            android:background="#ffa700"
            android:text="AI" />
        <Button
            android:id="@+id/button6"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="#ffa700"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/ic_pregnancy"
            android:text="Test" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="105dp">
        <Button
            android:id="@+id/button7"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="#ffa700"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/ic_treatment"
            android:text="Treatment" />
        <Button
            android:id="@+id/button8"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="#ffa700"
            android:drawableTop="@drawable/ic_deworm"
            android:text="Deworming" />
    </LinearLayout>
</LinearLayout>
